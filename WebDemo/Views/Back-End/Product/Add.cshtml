@{
    ViewData["Title"] = "Create Product";
    ViewData["js"] = "/js/back_end/Product/proCreate.js";
}
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Create</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Products</a></li>
                        <li class="breadcrumb-item active">Create Product</li>
                    </ol>
                </div>
            </div>
        </div>
        <a asp-area="" asp-controller="AdminProduct" asp-action="Index" class="badge badge-light">
            <div class="col-sm-12">
                <i class="fa fa-arrow-left fa-1x" aria-hidden="true"> back</i>
            </div>
        </a>
    </div>

    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-body">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Product Name</span>
                            </div>
                            <input type="text" class="form-control" name="proName" aria-describedby="basic-addon3" placeholder="Enter Product name">
                            <div class="invalid-feedback" style="font-size:15px;" id="pName"></div>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Product Price</span>
                            </div>
                            <input type="text" class="form-control" name="proPrice" aria-describedby="basic-addon3" placeholder="Enter Product Price">
                            <div class="invalid-feedback" style="font-size:15px;" id="pPrice"></div>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Product Quantity</span>
                            </div>
                            <input type="number" class="form-control" name="proQuantity" aria-describedby="basic-addon3" placeholder="Enter Product Quantity">
                            <div class="invalid-feedback" style="font-size:15px;" id="pQuantity"></div>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Product Description</span>
                            </div>
                            <input type="text" class="form-control" name="proDescription" aria-describedby="basic-addon3" placeholder="Enter Product Description">
                            <div class="invalid-feedback" style="font-size:15px;" id="pDescription"></div>
                        </div>
                 
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Product Image</span>
                            </div>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" name="proImg" id="fileinput" accept="image/png, image/jpeg">
                                <label class="custom-file-label" for="fileinput">Choose file</label>           
                            </div>                    
                        </div>
                        <div class="invalid-feedback" style="font-size:15px;" id="pImage"></div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Product category</span>
                            </div>
                            <select class=" form-control" id="tbodyResult">
                            </select>
                        </div>

                    </div>
                </div>
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button" onclick="proCre()">Create</button>
                </div>
            </div>
        </div>
    </section>
</div>

<script id="courseTemplate" type="text/x-jquery-tmpl">
    <option value="${cateId}">${cateName}</option>
</script>
