@model IEnumerable<WebDemo.Models.Category>
@{
    ViewData["Title"] = "Categories Manager";
    ViewData["css"] = "<link rel='stylesheet' href='~/lib/teamplate_back_end/datatables.net-bs/css/dataTables.bootstrap.min.css'>";
    ViewData["Scripts"] = "<script src='~/lib/teamplate_back_end/datatables.net/js/jquery.dataTables.min.js'></script> " +
                    "<script src='~/lib/teamplate_back_end/datatables.net-bs/js/dataTables.bootstrap.min.js'></script>";

    Paper paper = new Paper();
    int pageNo = 0;
    if (ViewBag.Paper != null)
    {
        paper = ViewBag.Paper;
        pageNo = paper.CurrentPage;
    }
}



<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Categories
            <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-list-ol" aria-hidden="true"></i> Home</a></li>
            <li class="active">Categories</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header col-xs-2 col-md-2">
                        @*<a href="@Url.Action("Create", "Categories")"><button type="button" class="btn btn-block btn-success">New</button></a>*@
                          <a asp-area="" asp-controller="Categories" asp-action="Create"><button type="button" class="btn btn-block btn-success">New</button></a>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Create At</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.CateId)</td>
                                        <td>@Html.DisplayFor(modelItem => item.CateName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.CreateAt)</td>
                                        <td> </td>
                                        <td></td>
                                        @*<td>
                                    @Html.ActionLink("Edit", "Edit", new { id=item.cdCode }) |
                                    @Html.ActionLink("Details", "Details", new { id=item.cdCode }) |
                                    @Html.ActionLink("Delete", "Delete", new { id=item.cdCode })
                                    </td>*@
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @if (paper.TotalPages > 0)
                        {
                            <nav aria-label="Page navigation example">
                                <ul class="pagination">
                                    @if (paper.CurrentPage < paper.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-controller="Categories" asp-action="Index" asp-route-pg="@(paper.CurrentPage + 1)">Previous</a>
                                        </li>
                                    }
                                    
                                    @for (var pge = paper.StartPage; pge <= paper.EndPage; pge++)
                                    {
                                        <li class="page-item @(pge == paper.CurrentPage ? "active" :"")">
                                            <a class="page-link" asp-controller="Categories" asp-action="Index" asp-route-pg="@pge">
                                                <span id="curPage">@pge</span>
                                            </a>
                                        </li>
                                    }
                                    @if (paper.CurrentPage < paper.TotalPages)
                                    {
                                       <li class="page-item">
                                            <a class="page-link" asp-route-pg="@(paper.TotalPages)">Next</a>
                                       </li>
                                    }
                                    
                                </ul>
                            </nav>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>


