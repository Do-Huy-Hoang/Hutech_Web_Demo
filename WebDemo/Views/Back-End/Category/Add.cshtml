@{
    ViewData["Title"] = "Create";
    ViewData["js"] = "/js/back_end/Category/cateCreate.js";
}
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Create</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Categories</a></li>
                        <li class="breadcrumb-item active">Create</li>
                    </ol>
                </div>
            </div>
        </div>
        <a asp-area="" asp-controller="AdminCategories" asp-action="Index" class="badge badge-light">
            <div class="col-sm-12">
                <i class="fa fa-arrow-left fa-1x" aria-hidden="true"> back</i>
            </div>
        </a>
    </div>

    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-body">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Category name</span>
                            </div>
                            <input type="text" class="form-control" name="cateName" placeholder="Enter category name" aria-describedby="basic-addon3">
                            <div class="invalid-feedback" style="font-size:15px;" id="message"></div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="button" onclick="createCate()" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>