@{
    ViewData["Title"] = "Create";
    ViewData["js"] = "/js/back_end/Category/create.js";
}
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Create</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Categories</a></li>
                        <li class="breadcrumb-item active">Create</li>
                    </ol>
                </div>
            </div>
        </div>
        <a asp-area="" asp-controller="Categories" asp-action="Index" class="badge badge-light">
            <div class="col-sm-12">
                <i class="fa fa-arrow-left fa-1x" aria-hidden="true" > back</i>         
            </div>
        </a>
    </div>

    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <form id="form_input">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="CateName">Email address</label>
                                <input type="text" class="form-control" name="cateName" placeholder="Enter category name">
                            </div>
                        </div>
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>